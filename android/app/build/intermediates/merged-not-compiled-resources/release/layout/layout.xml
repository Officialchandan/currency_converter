<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/widget_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="8dp"
	android:background="@drawable/widget_background"
	android:orientation="vertical"
	android:padding="10dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/img_from"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="20dp"
			android:layout_marginRight="10dp"
			android:src="@mipmap/app_icon" />

		<TextView
			android:id="@+id/tv_from"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/img_from"
			android:text="USD"
			android:textColor="#ffffff"
			android:textSize="16dp" />

		<ImageView
			android:id="@+id/img_to"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:layout_centerVertical="true"
			android:layout_marginTop="20dp"
			android:layout_marginRight="10dp"
			android:layout_toLeftOf="@+id/tv_to"
			android:src="@mipmap/app_icon_round" />

		<TextView
			android:id="@+id/tv_to"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:text="USD"
			android:textColor="#ffffff"
			android:textSize="16dp" />

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_marginTop="20dp"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:layout_gravity="center_vertical"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/widget_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:textColor="#FFFFFF"
			android:textSize="36sp"
			android:text="currency"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/img_arrow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:src="@android:drawable/arrow_up_float" />

		<TextView
			android:id="@+id/widget_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/img_arrow"
			android:layout_alignParentRight="true"
			android:textColor="#FFFFFF"
			android:text="0.000%"
			android:textSize="18sp" />

	</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<include
				android:id="@+id/included_chart_layout"
				layout="@layout/chart_layout"
				/>
		</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		>

		<TextView
			android:id="@+id/tv_currency"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Currency.wiki"
			android:textColor="#FFFFFF"
			android:textSize="16dp"
			android:layout_alignParentLeft="true" />


		<ImageView
			android:id="@+id/img_reload"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="15dp"
			android:src="@android:drawable/ic_menu_revert"
			/>
		<TextView
			android:layout_toLeftOf="@+id/img_reload"
			android:layout_width="1dp"
			android:layout_height="30dp"
			android:background="#FFFFFF"/>
		<ImageView
			android:id="@+id/img_setting"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginRight="15dp"
			android:layout_toLeftOf="@+id/img_reload"
			android:src="@android:drawable/ic_menu_set_as"
			/>

	</RelativeLayout>

</LinearLayout>