<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/item_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginVertical="5dp">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/img_flag"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:scaleType="fitXY"
		android:src="@drawable/usa_flag"
		app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
		app:strokeWidth="0dp" />

	<TextView
		android:id="@+id/tv_currency_code"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5dp"
		android:layout_toRightOf="@+id/img_flag"
		android:text="USD"
		android:textColor="#000000"
		android:textSize="16dp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/tv_country_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="15dp"
		android:layout_toLeftOf="@+id/img_star"
		android:layout_toRightOf="@+id/tv_currency_code"
		android:text="United state dollar"
		android:textColor="#000000"
		android:textSize="15dp" />

	<ImageView
		android:id="@+id/img_star"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:scaleType="fitXY"
		android:src="@android:drawable/star_off"

		/>
</RelativeLayout>